<h1>Conversations</h1>

<%= link_to "Create a Conversation", new_conversation_path %><br>

<p>Search for a Conversation:</p>
<%= form_with url: '/search', method: :get do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <%= form.submit 'Submit' %>
<% end %>

<% if @conversations.count > 0 %>
  <h2>My Conversations</h2>
  <% @conversations.each do |conversation| %>
    <h3><%= link_to conversation.title, conversation_path(conversation.id) %></h3>
    <p><%= conversation.start_date.strftime("%d/%m/%Y") %></p>
  <% end %>
<% else %>
  <p>You currently have no conversations.</p>
<% end %>
